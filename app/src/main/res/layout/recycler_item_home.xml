<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="158dp"
        android:layout_height="match_parent">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImage"
            android:layout_width="93dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimg">

        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/recTitle"
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_below="@+id/recImage"
            android:layout_alignStart="@+id/recImage"
            android:layout_alignEnd="@+id/recImage"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="6dp"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/recPriority"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recTitle"
            android:layout_alignStart="@+id/recTitle"
            android:layout_alignEnd="@+id/recTitle"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="13sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>